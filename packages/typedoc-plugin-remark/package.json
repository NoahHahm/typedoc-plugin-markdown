{
  "name": "typedoc-plugin-remark",
  "version": "0.0.0",
  "description": "Parse output with Remark",
  "main": "./dist/index.js",
  "files": [
    "dist/"
  ],
  "scripts": {
    "lint": "eslint ./src --ext .ts",
    "prepublishOnly": "npm run lint && npm run build",
    "build": "rm -rf ./dist && tsc",
    "postbuild": "copyfiles --up 1 ./src/**/*.cjs ./dist/",
    "predocs": "npm run build",
    "docs": "typedoc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tgreyuk/typedoc-plugin-markdown.git",
    "directory": "packages/typedoc-plugin-remark"
  },
  "homepage": "https://github.com/tgreyuk/typedoc-plugin-markdown/tree/master/packages/typedoc-plugin-remark",
  "author": "Thomas Grey",
  "license": "MIT",
  "dependencies": {
    "remark": "^15.0.1",
    "to-vfile": "^8.0.0"
  },
  "keywords": [
    "typedoc",
    "typedoc-plugin",
    "remark"
  ]
}
